    statusline #839496
    focused_workspace #0f1212 #c6c6c6 #0f1212
    active_workspace #0f1212 #c6c6c6 #0f1212
    inactive_workspace #0f1212 #0f1212 #c6c6c6
    urgent_workspace #0f1212 #EA6B66 #fdf6e3
  }
}

